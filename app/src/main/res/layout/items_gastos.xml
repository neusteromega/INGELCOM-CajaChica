<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15sp"
    android:layout_marginTop="5sp"
    android:layout_marginRight="15sp"
    android:layout_marginBottom="5sp"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="7sp"
    app:cardElevation="5sp"
    app:cardUseCompatPadding="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12sp"
        android:paddingRight="8sp">

        <LinearLayout
            android:id="@+id/textContainerGst"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8sp"
            android:paddingBottom="8sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/LLFinalGst"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/lblTipoCompraGst"
                android:layout_width="match_parent"
                android:layout_height="25sp"
                android:ellipsize="end"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center|left"
                android:maxLines="1"
                android:text="Tipo de Compra"
                android:textColor="@color/clr_fuente_primario"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/lblFechaGst"
                android:layout_width="match_parent"
                android:layout_height="25sp"
                android:ellipsize="end"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center|left"
                android:maxLines="1"
                android:text="00/00/0000 00:00"
                android:textColor="@color/clr_fuente_secundario"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblCuadrillaTituloGst"
                    android:layout_width="wrap_content"
                    android:layout_height="25sp"
                    android:layout_marginRight="4sp"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center|left"
                    android:text="Cuadrilla:"
                    android:textColor="@color/clr_fuente_primario"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/lblCuadrillaGst"
                    android:layout_width="wrap_content"
                    android:layout_height="25sp"
                    android:ellipsize="end"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center|left"
                    android:maxLines="1"
                    android:text="Nombre Cuadrilla"
                    android:textColor="@color/clr_fuente_primario"
                    android:textSize="13sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/lblEmpleadoCuadrillaGst"
                android:layout_width="match_parent"
                android:layout_height="22sp"
                android:ellipsize="end"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center|left"
                android:maxLines="1"
                android:text="Nombre Completo"
                android:textColor="@color/clr_fuente_primario"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LLFinalGst"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/lblTotalGst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="right"
                android:text="L.000.00"
                android:textColor="@color/clr_fuente_primario"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/btnExpandirGst"
                android:layout_width="25sp"
                android:layout_height="20sp"
                android:layout_gravity="center"
                app:srcCompat="@mipmap/ico_azul_expandir" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>