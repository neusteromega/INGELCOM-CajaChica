<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center|top"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="12dp"
    android:layout_marginBottom="10dp"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="12dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/lblNombreCuadrillaInicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="Nombre Cuadrilla"
            android:textColor="@color/clr_fuente_primario"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/lblTipoCompraInicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="Tipo de Compra"
            android:textColor="@color/clr_fuente_secundario"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/lblCantidadInicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="L.00,000.00"
            android:textColor="@color/clr_fuente_gastos"
            android:textSize="23dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>