<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clr_fondo_primario"
    tools:context=".Fragmentos.FragBuscarUsuario">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:orientation="vertical"
        android:paddingTop="45dp">

        <ImageView
            android:id="@+id/imgBuscarUsuario"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginBottom="35dp"
            android:background="@drawable/clr_casillablanca_redonda"
            android:contentDescription="@string/descripcion"
            android:elevation="5dp"
            android:paddingStart="35dp"
            android:paddingTop="25dp"
            android:paddingEnd="30dp"
            android:paddingBottom="35dp"
            android:src="@mipmap/ico_azul_buscarusuario" />

        <TextView
            android:id="@+id/lblIndicacionesBC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/clr_casillablanca_cuadrada"
            android:elevation="5dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center|left"
            android:paddingLeft="12dp"
            android:paddingTop="10dp"
            android:paddingRight="12dp"
            android:paddingBottom="10dp"
            android:text="Para completar tu usuario y crear tu correo y contraseña, primero busca tu usuario en el sistema. Ingresa tu número de identidad sin guiones para buscarlo."
            android:textColor="@color/clr_fuente_secundario"
            android:textSize="18dp" />

        <LinearLayout
            android:id="@+id/LLIdentidad"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/clr_casillablanca_cuadrada"
            android:elevation="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="15dp">

            <ImageView
                android:id="@+id/imgIdentidadBC"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@mipmap/ico_azul_identidad" />

            <EditText
                android:id="@+id/txtIdentidadBC"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@android:color/transparent"
                android:ems="10"
                android:fontFamily="@font/montserrat_bold"
                android:hint="Identidad"
                android:inputType="number"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:textColor="@color/clr_fuente_secundario"
                android:textSize="17dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/btnBuscarBC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/clr_casilladegradadoazul_redonda"
            android:elevation="5dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="right"
            android:paddingLeft="25dp"
            android:paddingTop="10dp"
            android:paddingRight="25dp"
            android:paddingBottom="10dp"
            android:text="Buscar"
            android:textColor="@color/clr_fuente_terciario"
            android:textSize="22dp" />
    </LinearLayout>
</FrameLayout>