<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clr_fondo_primario"
    tools:context=".Fragmentos.FragBuscarUsuario">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:orientation="vertical"
        android:paddingTop="45sp">

        <ImageView
            android:id="@+id/imgBuscarUsuario"
            android:layout_width="160sp"
            android:layout_height="160sp"
            android:layout_marginBottom="35sp"
            android:background="@drawable/clr_casillablanca_redonda"
            android:contentDescription="@string/descripcion"
            android:elevation="5sp"
            android:paddingStart="35sp"
            android:paddingTop="25sp"
            android:paddingEnd="30sp"
            android:paddingBottom="35sp"
            android:src="@mipmap/ico_azul_buscarusuario" />

        <TextView
            android:id="@+id/lblIndicacionesBC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="25sp"
            android:background="@drawable/clr_casillablanca_cuadrada"
            android:elevation="5sp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center|left"
            android:paddingLeft="12sp"
            android:paddingTop="10sp"
            android:paddingRight="12sp"
            android:paddingBottom="10sp"
            android:text="Para completar tu usuario y crear tu correo y contraseña, primero busca tu usuario en el sistema. Ingresa tu número de identidad sin guiones para buscarlo."
            android:textColor="@color/clr_fuente_secundario"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/LLIdentidad"
            android:layout_width="match_parent"
            android:layout_height="55sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="30sp"
            android:background="@drawable/clr_casillablanca_cuadrada"
            android:elevation="5sp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="12sp"
            android:paddingRight="15sp">

            <ImageView
                android:id="@+id/imgIdentidadBC"
                android:layout_width="40sp"
                android:layout_height="40sp"
                app:srcCompat="@mipmap/ico_azul_identidad" />

            <EditText
                android:id="@+id/txtIdentidadBC"
                android:layout_width="match_parent"
                android:layout_height="55sp"
                android:background="@android:color/transparent"
                android:ems="10"
                android:fontFamily="@font/montserrat_bold"
                android:hint="Identidad"
                android:inputType="number"
                android:paddingLeft="15sp"
                android:paddingRight="10sp"
                android:textColor="@color/clr_fuente_secundario"
                android:textSize="17sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/btnBuscarBC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="15sp"
            android:background="@drawable/clr_casilladegradadoazul_redonda"
            android:elevation="5sp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="right"
            android:paddingLeft="25sp"
            android:paddingTop="10sp"
            android:paddingRight="25sp"
            android:paddingBottom="10sp"
            android:text="Buscar"
            android:textColor="@color/clr_fuente_terciario"
            android:textSize="22sp" />
    </LinearLayout>
</FrameLayout>