<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15sp"
    android:layout_marginTop="5sp"
    android:layout_marginRight="15sp"
    android:layout_marginBottom="5sp"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="7sp"
    app:cardElevation="5sp"
    app:cardUseCompatPadding="false">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13sp"
            android:orientation="vertical"
            android:paddingTop="8sp"
            android:paddingBottom="8sp">

            <TextView
                android:id="@+id/lblNombreApellidoEmp"
                android:layout_width="290sp"
                android:layout_height="25sp"
                android:ellipsize="end"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center|left"
                android:maxLines="1"
                android:text="Nombre Completo"
                android:textColor="@color/clr_fuente_primario"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/lblCorreoEmp"
                android:layout_width="290sp"
                android:layout_height="25sp"
                android:ellipsize="end"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center|left"
                android:maxLines="1"
                android:text="correo@correo.com"
                android:textColor="@color/clr_fuente_secundario"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblTituloCuadrillaEmp"
                    android:layout_width="wrap_content"
                    android:layout_height="25sp"
                    android:layout_marginRight="3sp"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center|left"
                    android:text="Cuadrilla:"
                    android:textColor="@color/clr_fuente_primario"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/lblCuadrillaEmp"
                    android:layout_width="wrap_content"
                    android:layout_height="25sp"
                    android:ellipsize="end"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center|left"
                    android:maxLines="1"
                    android:text="Nombre Cuadrilla"
                    android:textColor="@color/clr_fuente_primario"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10sp"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnExpandirGst"
                android:layout_width="25sp"
                android:layout_height="20sp"
                android:layout_gravity="center"
                app:srcCompat="@mipmap/ico_azul_expandir" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>