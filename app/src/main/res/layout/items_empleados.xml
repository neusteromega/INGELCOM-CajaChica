<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15sp"
    android:layout_marginTop="5sp"
    android:layout_marginRight="15sp"
    android:layout_marginBottom="5sp"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="7sp"
    app:cardElevation="5sp"
    app:cardUseCompatPadding="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12sp"
        android:paddingRight="8sp">

        <LinearLayout
            android:id="@+id/textContainterEmp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5sp"
            android:orientation="vertical"
            android:paddingTop="8sp"
            android:paddingBottom="8sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnExpandirEmp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/lblNombreApellidoEmp"
                android:layout_width="wrap_content"
                android:layout_height="25sp"
                android:ellipsize="end"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center|left"
                android:maxLines="1"
                android:text="Nombre Completo"
                android:textColor="@color/clr_fuente_primario"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/lblCorreoEmp"
                android:layout_width="wrap_content"
                android:layout_height="25sp"
                android:ellipsize="end"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center|left"
                android:maxLines="1"
                android:text="correo@correo.com"
                android:textColor="@color/clr_fuente_secundario"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblTituloCuadrillaEmp"
                    android:layout_width="wrap_content"
                    android:layout_height="25sp"
                    android:layout_marginRight="3sp"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center|left"
                    android:text="Cuadrilla:"
                    android:textColor="@color/clr_fuente_primario"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/lblCuadrillaEmp"
                    android:layout_width="wrap_content"
                    android:layout_height="25sp"
                    android:ellipsize="end"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center|left"
                    android:maxLines="1"
                    android:text="Nombre Cuadrilla"
                    android:textColor="@color/clr_fuente_primario"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/btnExpandirEmp"
            android:layout_width="25sp"
            android:layout_height="20sp"
            android:layout_gravity="center"
            app:srcCompat="@mipmap/ico_azul_expandir"
            tools:layout_editor_absoluteX="144dp"
            tools:layout_editor_absoluteY="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>