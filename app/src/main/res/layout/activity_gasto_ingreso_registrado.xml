<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clr_fondo_primario"
    tools:context=".GastoIngresoRegistrado">

    <TextView
        android:id="@+id/lblTituloGIR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:text="Gasto Registrado"
        android:textColor="@color/clr_fuente_primario"
        android:textSize="29dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/LLRegistrado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/clr_casillablanca_semiredonda"
        android:elevation="5dp"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:paddingRight="10dp"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/lblTituloGIR"
        app:layout_constraintBottom_toTopOf="@id/btnRegresarMenúGIR"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <ImageView
            android:id="@+id/imgRegistrado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ico_color_registrado" />

        <TextView
            android:id="@+id/lblExitoGIR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/montserrat_extrabold"
            android:gravity="center"
            android:text="¡EL GASTO HA SIDO REGISTRADO CON ÉXITO!"
            android:textColor="@color/clr_fuente_primario"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/lblTextoGIR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="Puede revisar el Listado de Gastos en el Menú Principal para visualizar el Gasto Registrado."
            android:textColor="@color/clr_fuente_secundario"
            android:textSize="20dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/btnRegresarMenúGIR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/clr_casilladegradadoazul_redonda"
        android:elevation="5dp"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:onClick="regresarAlMenu"
        android:paddingLeft="25dp"
        android:paddingTop="10dp"
        android:paddingRight="25dp"
        android:paddingBottom="10dp"
        android:text="Regresar al Menú"
        android:textColor="@color/clr_fuente_terciario"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>