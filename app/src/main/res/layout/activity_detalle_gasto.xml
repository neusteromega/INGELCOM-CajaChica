<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clr_fondo_primario"
    tools:context=".DetalleGasto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/descripcion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/LLEncabezadoDG"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:gravity="center|left"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <ImageView
                    android:id="@+id/imgRegresarDG"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@mipmap/ico_azul_regresar" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lblDetalleGasto"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="center"
                        android:text="Detalle de Gasto"
                        android:textColor="@color/clr_fuente_primario"
                        android:textSize="25dp" />

                    <ImageView
                        android:id="@+id/imgEditarDG"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/descripcion"
                        android:onClick="EditarGasto"
                        app:srcCompat="@mipmap/ico_azul_editar"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LLTotalGastadoDG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="35dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/clr_casillablanca_cuadrada"
                android:elevation="5dp"
                android:orientation="vertical"
                android:paddingTop="12dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/lblTituloTotalGastadoDG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center"
                    android:text="Total Gastado"
                    android:textColor="@color/clr_fuente_primario"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/lblTotalGastadoDG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center"
                    android:text="L.00.00"
                    android:textColor="@color/clr_fuente_gastos"
                    android:textSize="40dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LLDatosDG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/clr_casillablanca_cuadrada"
                android:elevation="5dp"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingTop="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="12dp">

                <TextView
                    android:id="@+id/lblFechaDG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Fecha: 00/00/0000"
                    android:textColor="@color/clr_fuente_secundario"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/lblSepFechaUsuarioDG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/clr_casillagris_separador"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center"
                    android:textSize="1dp" />

                <TextView
                    android:id="@+id/lblUsuarioDG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Usuario: Nombre Apellido"
                    android:textColor="@color/clr_fuente_secundario"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/lblSepUsuarioCuadrillaDG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/clr_casillagris_separador"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center"
                    android:textSize="1dp" />

                <TextView
                    android:id="@+id/lblCuadrillaDG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Cuadrilla: Nombre Cuadrilla"
                    android:textColor="@color/clr_fuente_secundario"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/lblSepCuadrillaLugarDG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/clr_casillagris_separador"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center"
                    android:textSize="1dp" />

                <TextView
                    android:id="@+id/lblLugarDG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Lugar: Lugar de Compra"
                    android:textColor="@color/clr_fuente_secundario"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/lblSepLugarTipoDG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/clr_casillagris_separador"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center"
                    android:textSize="1dp" />

                <TextView
                    android:id="@+id/lblTipoDG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Compra: Tipo de Compra"
                    android:textColor="@color/clr_fuente_secundario"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/lblSepTipoDescripcionDG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/clr_casillagris_separador"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center"
                    android:textSize="1dp" />

                <TextView
                    android:id="@+id/lblDescripcionDG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Descripción: Lorem ipsum dolor sit amet, consectetur adipiscing elit,  sed do eiusmod tempor ut."
                    android:textColor="@color/clr_fuente_secundario"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/lblSepDescripcionFacturaDG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/clr_casillagris_separador"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center"
                    android:textSize="1dp" />

                <TextView
                    android:id="@+id/lblFacturaDG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Factura: 0000-0000000-00"
                    android:textColor="@color/clr_fuente_secundario"
                    android:textSize="17dp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imgFotoEvidenciaRG2"
                android:layout_width="wrap_content"
                android:layout_height="167dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:visibility="visible"
                app:srcCompat="@mipmap/foto_evidencia" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>