<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center|top"
    android:layout_marginLeft="5sp"
    android:layout_marginTop="10sp"
    android:layout_marginRight="5sp"
    android:layout_marginBottom="20sp"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="10sp"
    app:cardElevation="5sp"
    app:cardUseCompatPadding="false">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="12sp"
        android:paddingTop="12sp"
        android:paddingRight="12sp"
        android:paddingBottom="12sp">

        <TextView
            android:id="@+id/lblNombreCuadrillaInicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3sp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="Nombre Cuadrilla"
            android:textColor="@color/clr_fuente_primario"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/lblFechaInicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2sp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:maxLines="1"
            android:text="Fecha Hora"
            android:textColor="@color/clr_fuente_secundario"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/lblCantidadInicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2sp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="L. 0.00"
            android:textColor="@color/clr_fuente_secundario"
            android:textSize="23sp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>