<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clr_fondo_primario"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16sp">

    <ImageView
        android:id="@+id/imgNoInternet"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_marginBottom="15sp"
        app:srcCompat="@mipmap/ico_azul_nointernet" />

    <TextView
        android:id="@+id/lblNoInternet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="No hay ConexiÃ³n a Internet"
        android:textColor="@color/clr_fuente_primario"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/btnReintentarConexion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp"
        android:background="@drawable/clr_casilladegradadoazul_redonda"
        android:elevation="5sp"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:paddingLeft="25sp"
        android:paddingTop="8sp"
        android:paddingRight="25sp"
        android:paddingBottom="8sp"
        android:text="Reintentar"
        android:textColor="@color/clr_fuente_terciario"
        android:textSize="20sp"
        tools:ignore="TouchTargetSizeCheck" />

    <ProgressBar
        android:id="@+id/pbReintentarConexion"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</LinearLayout>