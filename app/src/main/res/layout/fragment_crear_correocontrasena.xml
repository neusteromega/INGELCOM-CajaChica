<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clr_fondo_primario"
    tools:context=".Fragmentos.FragCrearCorreoContrasena" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="45dp">

        <TextView
            android:id="@+id/lblUsuarioEncontradoCCC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="¡Usuario Encontrado!"
            android:textColor="@color/clr_fuente_primario"
            android:textSize="29dp" />

        <TextView
            android:id="@+id/lblIndicacionesCCC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="55dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/clr_casillablanca_cuadrada"
            android:elevation="5dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center|left"
            android:paddingLeft="12dp"
            android:paddingTop="10dp"
            android:paddingRight="12dp"
            android:paddingBottom="10dp"
            android:text="Ingresa un correo electrónico y una contraseña para tu usuario."
            android:textColor="@color/clr_fuente_secundario"
            android:textSize="18dp" />

        <LinearLayout
            android:id="@+id/LLCorreoCCC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/clr_casillablanca_cuadrada"
            android:elevation="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="15dp">

            <ImageView
                android:id="@+id/imgCorreoCCC"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@mipmap/ico_azul_correo" />

            <EditText
                android:id="@+id/txtCorreoCCC"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@android:color/transparent"
                android:ems="10"
                android:fontFamily="@font/montserrat_bold"
                android:hint="Correo Electrónico"
                android:inputType="textEmailAddress"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:textColor="@color/clr_fuente_secundario"
                android:textSize="17dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LLContrasenaCCC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/clr_casillablanca_cuadrada"
            android:elevation="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="15dp">

            <ImageView
                android:id="@+id/imgContrasenaCCC"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@mipmap/ico_azul_contrasena" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txtContrasenaCCC"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:fontFamily="@font/montserrat_bold"
                    android:hint="Contraseña"
                    android:inputType="textPassword"
                    android:paddingLeft="15dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/clr_fuente_secundario"
                    android:textSize="17dp" />

                <ImageView
                    android:id="@+id/imgVerContrasenaCCC"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:contentDescription="@string/descripcion"
                    app:srcCompat="@mipmap/ico_azul_mostrarcontrasena" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LLConfContrasenaCCC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/clr_casillablanca_cuadrada"
            android:elevation="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="15dp">

            <ImageView
                android:id="@+id/imgConfContrasenaCCC"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@mipmap/ico_azul_contrasena" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txtConfContrasenaCCC"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:fontFamily="@font/montserrat_bold"
                    android:hint="Confirmar Contraseña"
                    android:inputType="textPassword"
                    android:paddingLeft="15dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/clr_fuente_secundario"
                    android:textSize="17dp" />

                <ImageView
                    android:id="@+id/imgVerConfContrasenaCCC"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:contentDescription="@string/descripcion"
                    app:srcCompat="@mipmap/ico_azul_mostrarcontrasena" />
            </LinearLayout>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/pbConfirmarCCC"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/btnConfirmarCCC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/clr_casilladegradadoazul_redonda"
            android:elevation="5dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="right"
            android:paddingLeft="25dp"
            android:paddingTop="10dp"
            android:paddingRight="25dp"
            android:paddingBottom="10dp"
            android:text="Confirmar"
            android:textColor="@color/clr_fuente_terciario"
            android:textSize="22dp" />

    </LinearLayout>
</FrameLayout>