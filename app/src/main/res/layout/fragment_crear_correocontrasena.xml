<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clr_fondo_primario"
    tools:context=".Fragmentos.FragCrearCorreoContrasena" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/descripcion" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="45sp">

            <TextView
                android:id="@+id/lblUsuarioEncontradoCCC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:text="¡Usuario Encontrado!"
                android:textColor="@color/clr_fuente_primario"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/lblIndicacionesCCC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="55sp"
                android:layout_marginRight="20sp"
                android:layout_marginBottom="50sp"
                android:background="@drawable/clr_casillablanca_cuadrada"
                android:elevation="5sp"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center|left"
                android:paddingLeft="12sp"
                android:paddingTop="10sp"
                android:paddingRight="12sp"
                android:paddingBottom="10sp"
                android:text="Ingresa un correo electrónico y una contraseña para tu usuario."
                android:textColor="@color/clr_fuente_secundario"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/LLCorreoCCC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:layout_marginBottom="15sp"
                android:background="@drawable/clr_casillablanca_cuadrada"
                android:elevation="5sp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="12sp"
                android:paddingRight="15sp">

                <ImageView
                    android:id="@+id/imgCorreoCCC"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    app:srcCompat="@mipmap/ico_azul_correo" />

                <EditText
                    android:id="@+id/txtCorreoCCC"
                    android:layout_width="match_parent"
                    android:layout_height="55sp"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:fontFamily="@font/montserrat_bold"
                    android:hint="Correo Electrónico"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="15sp"
                    android:paddingRight="10sp"
                    android:textColor="@color/clr_fuente_secundario"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LLContrasenaCCC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:layout_marginBottom="15sp"
                android:background="@drawable/clr_casillablanca_cuadrada"
                android:elevation="5sp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="12sp"
                android:paddingRight="15sp">

                <ImageView
                    android:id="@+id/imgContrasenaCCC"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    app:srcCompat="@mipmap/ico_azul_contrasena" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|right"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/txtContrasenaCCC"
                        android:layout_width="match_parent"
                        android:layout_height="55sp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:ems="10"
                        android:fontFamily="@font/montserrat_bold"
                        android:hint="Contraseña"
                        android:inputType="textPassword"
                        android:paddingLeft="15sp"
                        android:paddingRight="10sp"
                        android:textColor="@color/clr_fuente_secundario"
                        android:textSize="17sp" />

                    <ImageView
                        android:id="@+id/imgVerContrasenaCCC"
                        android:layout_width="35sp"
                        android:layout_height="30sp"
                        android:contentDescription="@string/descripcion"
                        app:srcCompat="@mipmap/ico_azul_mostrarcontrasena" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LLConfContrasenaCCC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:layout_marginBottom="30sp"
                android:background="@drawable/clr_casillablanca_cuadrada"
                android:elevation="5sp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="12sp"
                android:paddingRight="15sp">

                <ImageView
                    android:id="@+id/imgConfContrasenaCCC"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    app:srcCompat="@mipmap/ico_azul_contrasena" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|right"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/txtConfContrasenaCCC"
                        android:layout_width="match_parent"
                        android:layout_height="55sp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:ems="10"
                        android:fontFamily="@font/montserrat_bold"
                        android:hint="Confirmar Contraseña"
                        android:inputType="textPassword"
                        android:paddingLeft="15sp"
                        android:paddingRight="10sp"
                        android:textColor="@color/clr_fuente_secundario"
                        android:textSize="17sp" />

                    <ImageView
                        android:id="@+id/imgVerConfContrasenaCCC"
                        android:layout_width="35sp"
                        android:layout_height="30sp"
                        android:contentDescription="@string/descripcion"
                        app:srcCompat="@mipmap/ico_azul_mostrarcontrasena" />
                </LinearLayout>

            </LinearLayout>

            <ProgressBar
                android:id="@+id/pbConfirmarCCC"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/btnConfirmarCCC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="20sp"
                android:layout_marginRight="15sp"
                android:layout_marginBottom="15sp"
                android:background="@drawable/clr_casilladegradadoazul_redonda"
                android:elevation="5sp"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="right"
                android:paddingLeft="25sp"
                android:paddingTop="10sp"
                android:paddingRight="25sp"
                android:paddingBottom="10sp"
                android:text="Confirmar"
                android:textColor="@color/clr_fuente_terciario"
                android:textSize="22sp" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>